@using AdminUI.Models
@model YazarViewModel

@{
    string apiUrl = "https://localhost:7145";
}

<div class="container">
    <div class="page-title">
        <div class="page-title">
            <h3>Yazar İşlemleri</h3>
        </div>
        <div class="row">

            <div class="col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">Yazar Güncelle</div>
                    <div class="card-body">
                        <p class="card-title">Yazarlar güncelleme işlemi yapabilirsiniz.</p>

                        @using (Html.BeginForm("YazarGuncelle", "Yazar", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.HiddenFor(x => x.Id)
                            <div class="mb-3">
                                <label for="name" class="form-label">Ad</label>
                                @Html.TextBoxFor(x => x.Name, new { placeholder = "Ad", @class = "form-control" })
                            </div>

                            <div class="mb-3">
                                <label for="surname" class="form-label">Soyad</label>
                                @Html.TextBoxFor(x => x.Surname, new { placeholder = "Soyad", @class = "form-control" })
                            </div>

                            <div class="mb-3">
                                <label for="email" class="form-label">E-Posta</label>
                                @Html.TextBoxFor(x => x.Email, new { placeholder = "E-mail", @class = "form-control" })
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                @Html.TextBoxFor(x => x.Password, new { placeholder = "Password", type = "password", @class = "form-control" })
                            </div>

                            <div class="mb-3">
                                <label for="resim" class="form-label">Geçerli Resim</label>
                                <img src="@Url.Content(apiUrl + Model.Resim)" style="max-width:150px" />
                                @Html.HiddenFor(x=>x.Resim)
                            </div>

                            <div class="mb-3">
                                <label for="resim" class="form-label">Yeni Resim</label>
                                @Html.TextBoxFor(x => x.ResimFile, new { type = "file", @class = "form-control" })
                            </div>

                            <div class="mb-3">
                                <label for="" class="form-label">Statü</label>
                                <div class="form-check form-switch">
                                    @Html.CheckBoxFor(x => x.AktifMi, new { @class = "form-check-input" })
                                </div>
                            </div>

                            <br />
                            <button type="submit" class="btn-waring">Güncelle</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@using Shared.Dtos
@model List<KategorilerDto>

<div class="container">

    <div class="page-title">
        <h3>Kategori İşlemleri</h3>
    </div>
    <div class="row">

        <div class="col-md-12 col-lg-12">
            <div class="card">
                <div class="card-header">Kategoriler</div>
                <a href="/Kategori/Ekle" style=" width:60px;" class="btn btn-icon icon-left btn-info float-right mb-2">Yeni Ekle</a> @*Burasını en son ekle*@
                <div class="card-body">
                    <p class="card-title">Kategoriler ile ilgili tüm işlemleri buradan yapabilirsiniz. Toplam Aktif Kayıt Sayısı: @Model.Where(x => x.AktifMi == true).Count()</p>
                    <table class="table table-hover" id="dataTables-example" width="100%">
                        <thead>
                            <tr>
                                <th>Açıklama</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Aciklama</td>
                                    <td>
                                        @if (item.AktifMi)
                                        {
                                            <span class="badge bg-info">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info bg-danger">Pasif</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="/Kategori/Guncelle?kategoriId=@item.Id" class="btn btn-primary mb-2"><i class="fa fa-edit"></i></a>
                                        <a href="/Kategori/Sil?kategoriId=@item.Id" class="btn btn-danger mb-2" style="width: 44px;"><i class="fa fa-times"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

</div>

